<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================== FOURNISSEUR ================== -->
    <record id="view_fournisseur_form" model="ir.ui.view">
        <field name="name">fournisseur.form</field>
        <field name="model">gestion.patrimoine.fournisseur</field>
        <field name="arch" type="xml">
            <form string="Fournisseur">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="denomination"/>
                            <field name="adresse"/>
                        </group>
                        <group>
                            <field name="tel"/>
                            <field name="fax"/>
                            <field name="email" widget="email"/>
                        </group>
                    </group>
                    <group string="Responsable">
                        <group>
                            <field name="nom_resp"/>
                            <field name="prenom_resp"/>
                        </group>
                        <group>
                            <field name="gsm1"/>
                            <field name="gsm2"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fournisseur_tree" model="ir.ui.view">
        <field name="name">fournisseur.tree</field>
        <field name="model">gestion.patrimoine.fournisseur</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="denomination"/>
                <field name="tel"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="action_fournisseur" model="ir.actions.act_window">
        <field name="name">Fournisseurs</field>
        <field name="res_model">gestion.patrimoine.fournisseur</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================== PERSONNEL ================== -->
    <record id="view_personnel_form" model="ir.ui.view">
        <field name="name">personnel.form</field>
        <field name="model">gestion.patrimoine.personnel</field>
        <field name="arch" type="xml">
            <form string="Personnel">
                <sheet>
                    <group>
                        <group>
                            <field name="matricule"/>
                            <field name="nom"/>
                            <field name="prenom"/>
                            <field name="categorie_id"/>
                        </group>
                        <group>
                            <field name="fonction"/>
                            <field name="tel"/>
                            <field name="fax"/>
                            <field name="email" widget="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_personnel_tree" model="ir.ui.view">
        <field name="name">personnel.tree</field>
        <field name="model">gestion.patrimoine.personnel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="matricule"/>
                <field name="nom"/>
                <field name="prenom"/>
                <field name="categorie_id"/>
                <field name="fonction"/>
            </tree>
        </field>
    </record>

    <record id="action_personnel" model="ir.actions.act_window">
        <field name="name">Personnel</field>
        <field name="res_model">gestion.patrimoine.personnel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================== UNITÉ ================== -->
    <record id="view_unite_form" model="ir.ui.view">
        <field name="name">unite.form</field>
        <field name="model">gestion.patrimoine.unite</field>
        <field name="arch" type="xml">
            <form string="Unité">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="designation"/>
                        <field name="type_unite_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_unite_tree" model="ir.ui.view">
        <field name="name">unite.tree</field>
        <field name="model">gestion.patrimoine.unite</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="designation"/>
                <field name="type_unite_id"/>
            </tree>
        </field>
    </record>

    <record id="action_unite" model="ir.actions.act_window">
        <field name="name">Unités</field>
        <field name="res_model">gestion.patrimoine.unite</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================== PATRIMOINE GÉOGRAPHIQUE ================== -->
    <record id="view_patrimoine_geographique_form" model="ir.ui.view">
        <field name="name">patrimoine.geographique.form</field>
        <field name="model">gestion.patrimoine.geographique</field>
        <field name="arch" type="xml">
            <form string="Patrimoine Géographique">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="designation"/>
                        <field name="responsable_id"/>
                    </group>
                    <notebook>
                        <page string="Documents">
                            <group>
                                <field name="croquis"/>
                                <field name="fiche_immeuble" filename="fiche_immeuble_name"/>
                                <field name="fiche_etage" filename="fiche_etage_name"/>
                                <field name="fiche_local" filename="fiche_local_name"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patrimoine_geographique_tree" model="ir.ui.view">
        <field name="name">patrimoine.geographique.tree</field>
        <field name="model">gestion.patrimoine.geographique</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="designation"/>
                <field name="responsable_id"/>
            </tree>
        </field>
    </record>

    <record id="action_patrimoine_geographique" model="ir.actions.act_window">
        <field name="name">Localisations Géographiques</field>
        <field name="res_model">gestion.patrimoine.geographique</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ================== ÉTAT PATRIMOINE ACTIF ================== -->
    <record id="view_etat_patrimoine_actif_tree" model="ir.ui.view">
        <field name="name">etat.patrimoine.actif.tree</field>
        <field name="model">gestion.patrimoine.etat.patrimoine.actif</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patrimoine_actif_id"/>
                <field name="date_etat"/>
                <field name="etat_id"/>
                <field name="commentaire"/>
            </tree>
        </field>
    </record>

    <record id="action_etat_patrimoine_actif" model="ir.actions.act_window">
        <field name="name">Historique des États</field>
        <field name="res_model">gestion.patrimoine.etat.patrimoine.actif</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>